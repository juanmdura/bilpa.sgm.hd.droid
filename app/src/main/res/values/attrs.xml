<resources>

    <attr name="lbl" format="string" />
    <attr name="value" format="string" />
    <attr name="hint" format="string" />
    <attr name="fontHint" format="string" />
    <attr name="showArrow" format="boolean" />
    <attr name="lblMinWith" format="dimension" />

    <declare-styleable name="RadioWidget">
        <attr name="radioLbl" format="string" />
        <attr name="radioLblMinWith" format="dimension" />
        <attr name="radioLblMaxWith" format="dimension" />
        <attr name="radioCount" format="integer" /> <!-- 2 or 3 -->
        <attr name="radioOpt0" format="string" />
        <attr name="radioOpt1" format="string" />
        <attr name="radioOpt2" format="string" />
        <attr name="radioOpt3" format="string" />
    </declare-styleable>

    <declare-styleable name="LblEditText">
        <attr name="lbl" />
        <attr name="value" />
        <attr name="hint" />
        <attr name="lblMinWith" />
        <attr name="nextFoucs" format="reference" />
        <attr name="minLines" format="integer"/>
    </declare-styleable>

    <declare-styleable name="LblTextView">
        <attr name="lbl" />
        <attr name="hint" />
        <attr name="value" />
        <attr name="fontHint" />
        <attr name="showArrow" />
        <attr name="lblMinWith" />
        <attr name="orientation" format="integer" />
    </declare-styleable>

</resources>
