<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_row_size"
    android:background="@color/home_row_header">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/separator" />


    <RelativeLayout
        android:id="@+id/vListEstacionesHeaderContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="64dp"
        android:paddingRight="64dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:id="@+id/vEstacionName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@string/roboto_light"
                android:gravity="left"
                android:text="@string/home_estacion_header_estacion"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/vZone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:fontFamily="@string/roboto_light"
                android:gravity="center"
                android:text="@string/home_estacion_header_zona"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/vDateLastVisit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/roboto_light"
                android:gravity="center"
                android:text="@string/home_estacion_header_last_visita"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <TextView
                android:id="@+id/vDateNextVisit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/roboto_light"
                android:gravity="center"
                android:text="@string/home_estacion_header_next_visita"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <TextView
                android:id="@+id/vDaysWithoutVisit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/roboto_light"
                android:gravity="center"
                android:text="@string/home_estacion_header_dias_sin_visita"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/vStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@string/roboto_light"
                android:gravity="center"
                android:text="@string/home_estacion_header_estado"
                android:textAppearance="?android:attr/textAppearanceMedium" />


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>