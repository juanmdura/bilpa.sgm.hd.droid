<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_corregido_detail">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/bg_field"
        android:padding="8dp">


        <TextView
            android:id="@+id/vValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/vSpinnerCount"
            android:fontFamily="@string/roboto_condensed"
            android:hint=""
            android:text="@string/preview_value"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/b_textColorPrimary"
            android:textColorHint="@color/b_widgetColorAccent" />



        <Spinner
            android:id="@+id/vSpinnerCount"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/vNewCheck"
            android:spinnerMode="dropdown"
            tools:listitem="@layout/row_spinner_filter_dark" />

        <ImageView
            android:id="@+id/vDeleteRepuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_delete_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/vSpinnerCount"
            android:layout_centerVertical="true" />

        <CheckBox
            android:id="@+id/vNewCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/vDeleteRepuesto"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="@string/corregidos_detail_repuestos_lbl_new" />


    </RelativeLayout>
</RelativeLayout>